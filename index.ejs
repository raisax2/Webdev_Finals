<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cat Facts</title>
  <link rel="stylesheet" href="./style.css">
</head>
<body>
  <div class="container">
    <h1>Daily Cat Fact</h1>
    <p class="fact"><%= fact %></p>
    <button onclick="getAnotherFact()">Get Another Fact</button>
  </div>
  <script>
    async function getAnotherFact() {
      try {
        const response = await fetch('/');
        const html = await response.text();
        const factElement = new DOMParser().parseFromString(html, 'text/html').querySelector('.fact');
        document.querySelector('.fact').textContent = factElement.textContent;
      } catch (error) {
        console.error('Error fetching another cat fact:', error.message);
      }
    }
  </script>
</body>
</html>
